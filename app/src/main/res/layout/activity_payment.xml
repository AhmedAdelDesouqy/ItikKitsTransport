<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/payment"
              android:layout_width="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:descendantFocusability="afterDescendants"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1550dp"
        android:orientation="vertical"
        android:gravity="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="15dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/back"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The way to Everywhere"
                    android:layout_marginTop="-12dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="24sp"
                    android:fontFamily="@font/pommel"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="265dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="-60dp"
            android:src="@drawable/avatar2"
            android:layout_gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="-180dp"
            android:textSize="20sp"
            android:fontFamily="@font/lato_light"
            android:textColor="#2299a4"
            android:text="Welcome,"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="-10dp"
            android:textSize="28sp"
            android:fontFamily="@font/nexa_light"
            android:textColor="@color/colorWhite"
            android:text="Alex"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="42dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/metro_yellow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 Rides"
                    android:textSize="16sp"
                    android:textColor="@color/color_caption_selected"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/nexa_light"
                android:textSize="36sp"
                android:gravity="center_vertical"
                android:text="750 p"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:src="@drawable/visa_logo"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/mastercard_logo"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/yandex_logo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3.5"
                android:textSize="16sp"
                android:fontFamily="@font/nexa_light"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="@color/colorGreyLight"
                android:text="Card No."/>

            <EditText
                android:id="@+id/credit_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5"
                android:hint="XXXX XXXX XXXX XXXX"
                android:layout_marginRight="-5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:inputType="numberDecimal"
                android:lines="1"
                android:digits="0123456789 "
                android:maxLength="19"
                android:imeOptions="actionNext"
                android:fontFamily="@font/nexa_light"
                android:background="@drawable/edit_text_border"
                android:textColor="@color/color_caption_unselected"
                android:textColorHint="@color/color_caption_unselected"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3.5"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:fontFamily="@font/nexa_light"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="@color/colorGreyLight"
                android:text="Expiry Date"/>
            <EditText
                android:id="@+id/expiry_date"
                android:layout_width="0dp"
                android:layout_weight="6.5"
                android:hint="MM/YY"
                android:layout_marginRight="-5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/color_caption_unselected"
                android:textColorHint="@color/color_caption_unselected"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:fontFamily="@font/nexa_light"
                android:digits="0123456789/"
                android:maxLength="5"
                android:lines="1"
                android:imeOptions="actionNext"
                android:background="@drawable/edit_text_border"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3.5"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/colorGreyLight"
                android:text="Security Code"/>
            <EditText
                android:id="@+id/security_code"
                android:layout_width="0dp"
                android:layout_weight="6.5"
                android:hint="XXX"
                android:layout_marginRight="-5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:background="@drawable/edit_text_border"
                android:textColor="@color/color_caption_unselected"
                android:textColorHint="@color/color_caption_unselected"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:fontFamily="@font/nexa_light"
                android:lines="1"
                android:imeOptions="actionDone"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkbox_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <ImageView
                android:id="@+id/checkbox_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/checkbox_off"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Save Card Information"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/colorGreyLight"
                android:textSize="16sp"/>
            
        </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textColor="#124e58"
            android:background="#fcaf17"
            android:textSize="24sp"
            android:fontFamily="@font/nexa_bold"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:text="CONTINUE"/>
        
    </LinearLayout>

</LinearLayout>