<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/recharging_options"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1550dp"
        android:orientation="vertical"
        android:gravity="left">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="15dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/back"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The way to Everywhere"
                    android:layout_marginTop="-12dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/pommel"
                    android:textSize="24sp"
                    android:textColor="@color/colorWhite"/>
                
            </LinearLayout>
            
        </LinearLayout>
        
        <ImageView
            android:layout_width="350dp"
            android:layout_height="265dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="-60dp"
            android:src="@drawable/avatar2"
            android:layout_gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="-180dp"
            android:textSize="20sp"
            android:fontFamily="@font/nexa_light"
            android:textColor="#2299a4"
            android:text="Welcome,"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="-10dp"
            android:textSize="28sp"
            android:fontFamily="@font/nexa_light"
            android:textColor="@color/colorWhite"
            android:text="Alex"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/one_ride_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="36dp"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/one_ride_radio"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/radio_off"/>
                <TextView
                    android:id="@+id/one_ride_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:textColor="#2e8b97"
                    android:textSize="30sp"
                    android:fontFamily="@font/nexa_light"
                    android:text="ONE TIME"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="70dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/one_ride_caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2e8b97"
                        android:textSize="32sp"
                        android:fontFamily="@font/nexa_light"
                        android:text="25 p"/>
                </LinearLayout>
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/metro_only_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="36dp"
                android:background="@color/color_cell_background_selected"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/metro_only_radio"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/radio_on"/>

                <ImageView
                    android:id="@+id/metro_only_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="28dp"
                    android:src="@drawable/metro_yellow"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="160dp">

                    <TextView
                        android:id="@+id/metro_only_caption_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:fontFamily="@font/nexa_light"
                        android:textColor="@color/color_caption_selected"
                        android:text="750 p"/>

                    <TextView
                        android:id="@+id/metro_only_caption_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nexa_light"
                        android:textColor="@color/color_caption_selected"
                        android:text="50 Rides"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bus_only_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="36dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/bus_only_radio"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/radio_off"/>

                <ImageView
                    android:id="@+id/bus_only_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="28dp"
                    android:src="@drawable/bus"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="160dp">

                    <TextView
                        android:id="@+id/bus_only_caption_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:fontFamily="@font/nexa_light"
                        android:textColor="@color/color_caption_unselected"
                        android:text="750 p"/>

                    <TextView
                        android:id="@+id/bus_only_caption_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/nexa_light"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/color_caption_unselected"
                        android:text="50 Rides"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bus_and_metro_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="36dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/bus_and_metro_radio"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/radio_off"/>

                <ImageView
                    android:id="@+id/bus_and_metro_logo_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="28dp"
                    android:src="@drawable/metro_blue"/>

                <ImageView
                    android:id="@+id/bus_and_metro_logo_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bus"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="85dp">

                    <TextView
                        android:id="@+id/bus_and_metro_caption_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:fontFamily="@font/nexa_light"
                        android:textColor="@color/color_caption_unselected"
                        android:text="1250 p"/>

                    <TextView
                        android:id="@+id/bus_and_metro_caption_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginLeft="36dp"
                        android:fontFamily="@font/nexa_light"
                        android:textColor="@color/color_caption_unselected"
                        android:text="50 Rides"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/pay_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#124e58"
                android:background="#fcaf17"
                android:textSize="24sp"
                android:fontFamily="@font/nexa_bold"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:text="PAY"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>